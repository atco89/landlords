{% extends 'base.html.twig' %}

{% block title %}
    Product
{% endblock %}

{% block container %}
    <div class="row">
        <div class="offset-lg-3 col-lg-6 col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <h3 class="m-0">
                                <strong>
                                    Product information's
                                </strong>
                            </h3>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-12">
                            {{ form_start(form) }}
                                <div class="my-custom-class-for-errors">
                                    {{ form_errors(form) }}
                                </div>
                                <div class="form-group mb-3">
                                    <label class="form-label" for="description">
                                        <strong>
                                            <span class="text-danger">*</span> {{ form_label(form.title) }}:
                                        </strong>
                                    </label>
                                    {{ form_widget(form.title, {'attr': {
                                        'class': 'form-control rounded-1'
                                    }}) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.title) }}
                                    </div>
                                </div>
                                <div class="form-group mb-3">
                                    <label class="form-label" for="description">
                                        <strong>
                                            <span class="text-danger">*</span> {{ form_label(form.description) }}:
                                        </strong>
                                    </label>
                                    {{ form_widget(form.description, {'attr': {
                                        'class': 'form-control rounded-1',
                                        'rows': 5
                                    }}) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.description) }}
                                    </div>
                                </div>
                                <div class="form-group mb-3">
                                    <label class="form-label" for="image">
                                        <strong>
                                            <span class="text-danger">*</span> {{ form_label(form.image) }}:
                                        </strong>
                                    </label>
                                    {{ form_widget(form.image, {'attr': {
                                        'class': 'form-control rounded-1',
                                    }}) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.image) }}
                                    </div>
                                </div>
                                <div class="form-group mb-3">
                                    <label class="form-label" for="price">
                                        <strong>
                                            <span class="text-danger">*</span> {{ form_label(form.price) }}:
                                        </strong>
                                    </label>
                                    {{ form_widget(form.price, {'attr': {
                                        'class': 'form-control rounded-1',
                                    }}) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.price) }}
                                    </div>
                                </div>
                                <div class="form-group mb-3">
                                    <label class="form-label" for="category">
                                        <strong>
                                            <span class="text-danger">*</span> {{ form_label(form.category) }}:
                                        </strong>
                                    </label>
                                    {{ form_widget(form.category, {'attr': {
                                        'class': 'form-control rounded-1',
                                    }}) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.category) }}
                                    </div>
                                </div>
                                {{ form_widget(form.submit, {'attr': {
                                    'class': 'btn btn-primary w-100 rounded-1',
                                }}) }}
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
